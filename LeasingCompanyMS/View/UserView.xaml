<Window x:Class="LeasingCompanyMS.View.UserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeasingCompanyMS.View"
        mc:Ignorable="d"
        Title="UserView" Height="700" Width="1300"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Border CornerRadius="10" 
    BorderThickness="2">

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource borderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource borderColor2}" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.ColumnDefinitions>
                <!-- Nav -->
                <ColumnDefinition Width="250"/>
                <!-- Content -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Nav -->
            <Border CornerRadius="10,0,0,10"
                Grid.Column="0">

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource backColor2}" Offset="0"/>
                        <GradientStop Color="{StaticResource backColor3}" Offset="0.7"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel>
                    <StackPanel Orientation="Horizontal"
                            Height="35"
                            Margin="15,25,0,40">

                        <TextBlock Text="Leasing MS - User"
                                   Foreground="{StaticResource titleColor2}"
                                   FontSize="20"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <RadioButton Style="{StaticResource menuButton}"
                             Tag="{StaticResource borderColor2}"
                             Click="openManageCars">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Manage Cars"
                                       Margin="15,0,0,0"
                                       Style="{StaticResource menuButtonText}"/>
                        </StackPanel>

                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
                             Tag="{StaticResource borderColor2}"
                             Click="openManagePayments">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Manage Payments" 
                                       Margin="15,0,0,0"
                                       Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                </StackPanel>

            </Border>

            <!-- Content -->
            <Border CornerRadius="0,10,10,0"
                Grid.Column="1">

                <Border.Background>
                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,0.7">
                        <GradientStop Color="{StaticResource backColor1}" Offset="0"/>
                        <GradientStop Color="{StaticResource backColor2}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel x:Name="pnlControlBar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="0,0,5,0"
                                MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
                                MouseEnter="pnlControlBar_MouseEnter">

                        <Button x:Name="btnClose"
                                Style="{StaticResource controlButton}"
                                Click="btnClose_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="X"
                                       Style="{StaticResource controlButtonText}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnMaximize"
                                Style="{StaticResource controlButton}"
                                Click="btnMaximize_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="[ ]"
                                       Style="{StaticResource controlButtonText}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnMinimize"
                                Style="{StaticResource controlButton}"
                                Click="btnMinimize_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="-"
                                       Style="{StaticResource controlButtonText}"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                    <Frame Grid.Row="2" Opacity="0.3" Name="frame">
                    </Frame>
                </Grid>

            </Border>

        </Grid>
    </Border>
</Window>
