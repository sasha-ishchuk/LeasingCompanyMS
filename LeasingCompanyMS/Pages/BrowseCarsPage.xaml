<Page x:Class="LeasingCompanyMS.Pages.BrowseCarsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LeasingCompanyMS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BrowseCarsPage">

    <Grid>
        <ComboBox HorizontalAlignment="Left" Height="31" Margin="32,32,0,0" VerticalAlignment="Top" Width="316" Name="carsComboBox" SelectionChanged="CarsComboBoxValueChanged"/>
        <Image HorizontalAlignment="Left" Height="189" Margin="400,142,0,0" VerticalAlignment="Top" Width="363"/>
        <Grid x:Name="carInfoBox" HorizontalAlignment="Left" Height="322" Margin="32,93,0,0" VerticalAlignment="Top" Width="316" Visibility="Hidden">
            <Label Content="Registration Number" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Height="23" Width="148" Grid.Row="3" Grid.Column="1" Foreground="White"/>
            <Label Content="VIN" HorizontalAlignment="Left" Margin="10,128,0,0" VerticalAlignment="Top" Height="23" Width="148" Grid.Row="4" Grid.Column="1" Foreground="White"/>
            <Label x:Name="registrationValue" Content="" HorizontalAlignment="Left" Margin="158,100,0,0" VerticalAlignment="Top" Height="23" Width="148" Grid.Row="3" Grid.Column="2" Foreground="White"/>
            <Label x:Name="vinValue" Content="" HorizontalAlignment="Left" Margin="158,128,0,0" VerticalAlignment="Top" Height="23" Width="148" Grid.Row="4" Grid.Column="2" Foreground="White"/>
        </Grid>

    </Grid>
</Page>
